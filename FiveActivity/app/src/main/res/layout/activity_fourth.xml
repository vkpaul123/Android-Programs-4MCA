<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vkpaul123.fiveactivity.FourthActivity">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/sky" />

    <FrameLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="cursive"
                android:text="SAAB Photo Grid"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Next"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/draken" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="1"
                            android:layout_row="0"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/gripen" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="2"
                            android:layout_row="0"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/viggen" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="0"
                            android:layout_row="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab8" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="1"
                            android:layout_row="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab1" />

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="2"
                            android:layout_row="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab2" />

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="0"
                            android:layout_row="2"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab3" />

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="1"
                            android:layout_row="2"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab4" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="2"
                            android:layout_row="2"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab5" />

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="0"
                            android:layout_row="3"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab6" />

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="1"
                            android:layout_row="3"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab7" />

                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="123dp"
                            android:layout_height="123dp"
                            android:layout_column="2"
                            android:layout_row="3"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/saab9" />

                    </GridLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
