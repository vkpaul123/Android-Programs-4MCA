<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vkpaul123.notificationstest.MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/simpleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simple" />

        <Button
            android:id="@+id/withIconButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With Icon, Heading and Text" />

        <Button
            android:id="@+id/withImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With image" />

        <Button
            android:id="@+id/withReplyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With Reply Option" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
